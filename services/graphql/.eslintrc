{
  "ecmaFeatures": {
    "modules": true
  },
  "env": {
    "browser": true,
    "node": true
  },
  "parser": "babel-eslint",
  "rules": {
    "quotes": [2, "single"],
    "strict": [2, "never"],
    "babel/generator-star-spacing": 1,
    "babel/new-cap": 1,
    "babel/object-shorthand": 0,
    "babel/arrow-parens": 0,
    "babel/no-await-in-loop": 1
  },
  "plugins": [
    "babel"
  ],
  "globals": {
    "__HOSTNAME__": true,
    "__PORT__": true,
    "__PRODUCTION__": true,
    "__SERVER__": true,
    "__CLIENT__": true,
    "__DEV__": true
  }
}
